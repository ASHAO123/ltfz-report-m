
.echarts_wrapper
  display flex
  flex-flow row wrap
  justify-content space-around
  align-items center
  .viscera_item
    width 20%
    margin .08rem
    font-size .24rem
    display flex
    flex-flow column nowrap
    text-align center
    .value
      color:#fff
      border-radius: .1rem
      padding: .14rem 0
      background-color #ddd
      &.red
        background-color $redText
      &.orange
        background-color $orangeText
      &.normal
        background $blueText
    span
      color #b5b5b5
      margin-top .1rem
.reference
  margin: .4rem 0 .3rem 0;
  text-align: center;
  font-size .26rem
  .warnState
    width:90%;
    margin:0 auto;
    display:flex;
    flex-flow:column nowrap;
    ul
      display:flex;
      flex-flow:column nowrap;
      li
        display:flex;
        flex-flow:row wrap;
        justify-content:space-between;
        border-bottom:.01rem solid #ebeef5
        &.stateTitle
          padding:.3rem 0;
          p
            display:flex;
            // transition transform .3s
            transition transform .3s, -webkit-transform .3s
            &:nth-child(2)
              width:.2rem;
              height:.2rem;
              border:solid;
              border-width:0 .01rem .01rem 0;
          .down
            transform:rotate(-45deg);
          .up
            transform:rotate(45deg);                  
.read
  .content
    position relative
    padding 0 0 .2rem 0
    line-height .55rem
    .mask
      display flex
      justify-content center
      align-items center
      position absolute
      bottom 0
      width 100%
      height .7rem
      &.hidden
        background rgba(255,255,255,.9)
      &.show
        background rgba(255,255,255,1)
      .iconfont
        margin-top .02rem
        display block
        font-size .48rem
        color #333
    h3
      margin-bottom .1rem
      font-size .3rem
      font-weight bold
    .article
      text-indent .6rem
      text-align justify
      color #707070
      &.hidden
        height 1.4rem
        overflow hidden
      &.show
        margin-bottom .7rem
        height auto
        overflow auto
.part-top
  margin .6rem 0 .4rem
  .header
    display flex
    flex-flow row nowrap
    align-items center
    margin-bottom .2rem
    .iconfont
      margin 0 .1rem 0
      font-size 0.4rem
    h2
      font-size 0.36rem
.iconfont
  font-size 0.6rem
  color $redText
.slide-fade-enter-active {
  transition: all .3s ease;
}
.slide-fade-enter
/* .slide-fade-leave-active for below version 2.1.8 */ {
  transform: translateY(-10px);
  opacity: 0;
}